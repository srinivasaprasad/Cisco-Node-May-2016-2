<style>
	.completed{
		color :red;
		text-decoration : line-through;
		font-style : italic;
	}
</style>
<h1>Task Manager</h1>
<hr>
<ol>
	{{#each list}}
		<li>
			{{#if isCompleted}}
				<span class="completed">
			{{else}}
				<span>
			{{/if}}
			{{name}}
			</span>
			<span>
				<a href="/tasks/toggle/{{id}}">X</a>
			</span>

		</li>
	{{/each}}
</ol>
<a href="/tasks/new">Create New</a>